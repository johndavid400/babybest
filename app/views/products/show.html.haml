%p#notice= notice

%h3= @product.name

%hr

%ul.pricing-table
  %li.title= @product.name
  %li.bullet-item= link_to @product.brand.name, brand_path(@product.brand)
  %li.bullet-item= link_to @product.type.name, type_path(@product.type)
  %li.bullet-item= link_to @product.store.name, store_path(@product.store)
  - if @product.size
    %li.bullet-item= "Size: #{@product.size}"
  %li.bullet-item= "Qty: #{@product.quantity}"
  %li.bullet-item= "price per unit: #{number_to_currency(@product.per_unit)}"
  %li.price= number_to_currency(@product.price)

= link_to 'Edit', edit_product_path(@product), :class => "button expand"
